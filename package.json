                    "light": "#008000",
                    "dark": "#608B4E",
                    "highContrast": "#608B4E"
                }
            },
            {
                "id": "githd.historyView.author",
                "description": "The color of commit author in history view.",
                "defaults": {
                    "light": "#001080",
